<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--ingredients-->
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/item_ingred"
        android:hint="Ingredients"
        android:autofillHints="Ingredients"
        android:textSize="16sp"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:imeOptions="actionNext"
        android:inputType="textMultiLine"
        android:padding="12dp"/>

    <!--palm oil-->
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/palm_oil_ingr"
        android:autofillHints="Palm Oil Ingredients"
        android:hint="Palm Oil Ingredients"
        android:textSize="16sp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="12dp"/>

    <!--&lt;!&ndash;diet chips&ndash;&gt;-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/dietView"
        android:gravity="center"
        android:layout_marginVertical="10dp">
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vegan_chip"
            android:layout_gravity="center"
            android:text="Vegan"
            chipBackgroundColor="@android:color/darker_gray"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/veg_chip"
            android:layout_gravity="center"
            android:text="Vegetarian"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            chipBackgroundColor="@android:color/darker_gray"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gluten_chip"
            android:layout_gravity="center"
            android:text="Gluten Free"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            chipBackgroundColor="@android:color/darker_gray"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>
    </LinearLayout>
</LinearLayout>