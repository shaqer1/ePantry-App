<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--&lt;!&ndash;nutrients&ndash;&gt;-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_nut_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitCenter"/>
        <Button
            android:id="@+id/resetImageNutBT"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/editImageNutBT"
            android:backgroundTint="@color/grey_font"
            android:drawableTop="@drawable/ic_reset"/>
        <Button
            android:id="@+id/editImageNutBT"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/grey_font"
            android:drawableTop="@drawable/ic_editbutton"/>
    </RelativeLayout>
    <com.jjkaps.epantry.ui.ItemUI.NutrientUI.CustomRecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grid_nut"
        />
</LinearLayout>