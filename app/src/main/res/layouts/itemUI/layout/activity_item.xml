                -->
            <!--Image-->
            <!--android:src="@drawable/image_not_found"-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter" />

                <!--Edit image-->
                <Button
                    android:id="@+id/resetImageBT"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@id/editImageBT"
                    android:backgroundTint="@color/grey_font"
                    android:drawableTop="@drawable/ic_reset"/>
                <Button
                    android:id="@+id/editImageBT"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/grey_font"
                    android:drawableTop="@drawable/ic_editbutton"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <!--quantity-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/qtyLL"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_dec"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@color/fui_transparent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/quantity_til"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:hint="Quantity"
                        app:hintTextAppearance="@style/TextLabel">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/item_quantity"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:imeOptions="actionDone"
                            android:paddingVertical="10dp"
                            android:maxLength="3"
                            android:background="@color/fui_transparent"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btn_inc"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/ic_plus_24dp"/>
                </LinearLayout>


                <!--expiration-->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/item_exp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="60dp"
                    android:maxLength="10"
                    android:layout_alignParentEnd="true"
                    android:hint="Expiration"
                    android:imeOptions="actionNone"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <!--name-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Name"
                android:paddingHorizontal="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="40"
                    android:imeOptions="actionDone"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>



            <!--brand-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginVertical="5dp"
                android:id="@+id/brand_til"
                android:hint="Brand">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:maxLength="40"
                    android:id="@+id/item_brand"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_addShoppingList"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="15dp"
                    android:drawableBottom="@drawable/add_shopping_24dp" />

                <Button
                    android:id="@+id/bt_addFridgeList"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="15dp"
                    android:drawableBottom="@drawable/add_fridge_24dp"/>

                <Button
                    android:id="@+id/bt_add_remove_catalog"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="15dp"
                    android:paddingBottom="7dp"
                    android:drawableBottom="@drawable/ic_delete_24dp"
                    android:visibility="gone" />
            </LinearLayout>
            <com.jjkaps.epantry.ui.ItemUI.ExpListView.CustomExpListView
                android:id="@+id/productIngredientsELV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.5dp"
                android:footerDividersEnabled="true"
                android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft">
            </com.jjkaps.epantry.ui.ItemUI.ExpListView.CustomExpListView>

